<Window x:Class="CarmenUI.Windows.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarmenUI.Windows"
        xmlns:cv="clr-namespace:CarmenUI.Converters"
        mc:Ignorable="d"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        Loaded="ReportWindow_Loaded"
        Title="Report" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel Margin="5" VerticalAlignment="Center">
            <Button Margin="5 0" VerticalAlignment="Center" Click="RefreshButton_Click">
                <TextBlock Margin="5 0" Text="Refresh"/>
            </Button>
            <ComboBox Margin="5 0" VerticalAlignment="Center">
                <ComboBox.Items>
                    <ComboBoxItem IsSelected="True" Content="Applicants"/>
                </ComboBox.Items>
            </ComboBox>
            <Button Margin="5 0" VerticalAlignment="Center" Click="ExportButton_Click">
                <TextBlock Margin="5 0" Text="Export"/>
            </Button>
            <!--<ComboBox SelectedIndex="0" ItemsSource="{Binding Role, Converter={StaticResource selectableItemsList}, ConverterParameter={StaticResource itemsViewSource}}">
                <ComboBox.ItemTemplateSelector>
                    <cv:ComboBoxFaceTemplateSelector>
                        <cv:ComboBoxFaceTemplateSelector.FaceTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ElementName=itemsCombo, Path=DataContext.CommaSeparatedItems}"/>
                            </DataTemplate>
                        </cv:ComboBoxFaceTemplateSelector.FaceTemplate>
                        <cv:ComboBoxFaceTemplateSelector.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected}"
                                                                  Width="{Binding ElementName=itemsCombo, Path=ActualWidth}"
                                                                  Content="{Binding ObjectValue.Name}"/>
                            </DataTemplate>
                        </cv:ComboBoxFaceTemplateSelector.ItemTemplate>
                    </cv:ComboBoxFaceTemplateSelector>
                </ComboBox.ItemTemplateSelector>
            </ComboBox>-->
        </WrapPanel>
        <DataGrid Grid.Row="1" x:Name="MainData" AutoGenerateColumns="False" ColumnDisplayIndexChanged="MainData_ColumnDisplayIndexChanged"/>
    </Grid>
</Window>
