<Page x:Class="CarmenUI.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarmenUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="Main Menu">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <TextBlock Text="Show Name" HorizontalAlignment="Center" FontSize="48"/>
            <TextBlock Text="opening 1st July 2021" HorizontalAlignment="Center" FontSize="20" FontStyle="Italic"/>
        </StackPanel>
        <ListBox Grid.Row="1" Grid.Column="0" Background="AliceBlue" Margin="20" VerticalAlignment="Center" BorderThickness="0">
            <ListBoxItem x:Name="ConfigureShow" Selected="ConfigureShow_Selected" MouseEnter="ConfigureShow_MouseEnter">
                <TextBlock Text="Conifguring Show" HorizontalAlignment="Left" FontSize="20"/>
            </ListBoxItem>
            <ListBoxItem x:Name="RegisterApplicants" Selected="RegisterApplicants_Selected" MouseEnter="RegisterApplicants_MouseEnter">
                <TextBlock Text="Registering Applicants" HorizontalAlignment="Left" FontSize="20"/>
            </ListBoxItem>
            <ListBoxItem x:Name="AuditionApplicants" Selected="AuditionApplicants_Selected" MouseEnter="AuditionApplicants_MouseEnter">
                <TextBlock Text="Auditioning" HorizontalAlignment="Left" FontSize="20"/>
            </ListBoxItem>
            <ListBoxItem x:Name="SelectCast" Selected="SelectCast_Selected" MouseEnter="SelectCast_MouseEnter">
                <TextBlock Text="Selecting Cast" HorizontalAlignment="Left" FontSize="20"/>
            </ListBoxItem>
            <ListBoxItem x:Name="ConfigureItems" Selected="ConfigureItems_Selected" MouseEnter="ConfigureItems_MouseEnter">
                <TextBlock Text="Configuring Items" HorizontalAlignment="Left" FontSize="20"/>
            </ListBoxItem>
            <ListBoxItem x:Name="AllocateRoles" Selected="AllocateRoles_Selected" MouseEnter="AllocateRoles_MouseEnter">
                <TextBlock Text="Allocating Roles" HorizontalAlignment="Left" FontSize="20"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="IT'S SHOWTIME" HorizontalAlignment="Left" FontSize="20" FontStyle="Italic"/>
            </ListBoxItem>
        </ListBox>
        <Image Grid.Row="0" Grid.Column="1" Source="/Icons/Database_16x.png"/>
        <StackPanel Grid.Row="1" Grid.Column="1" x:Name="SummaryPanel" Background="AliceBlue" Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Summary goes here" HorizontalAlignment="Left" FontSize="20"/>
        </StackPanel>
    </Grid>
</Page>
