<Page x:Class="CarmenUI.Pages.ConfigureShow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarmenUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="ConfigureShow">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Column="0" x:Name="ConfigList" FontSize="22" BorderThickness="0">
            <ListBoxItem x:Name="Criteria" Selected="Criteria_Selected">
                <TextBlock Text="Audition cast based on..."/>
            </ListBoxItem>
            <ListBoxItem x:Name="CastGroups" Selected="CastGroups_Selected">
                <TextBlock Text="Select cast into..."/>
            </ListBoxItem>
            <ListBoxItem x:Name="Tags" Selected="Tags_Selected">
                <TextBlock Text="Apply tags to cast members..."/>
            </ListBoxItem>
            <ListBoxItem x:Name="SectionTypes" Selected="SectionTypes_Selected">
                <TextBlock Text="Structure items into..."/>
            </ListBoxItem>
            <ListBoxItem x:Name="Requirements" Selected="Requirements_Selected">
                <TextBlock Text="Allocate roles based on..."/>
            </ListBoxItem>
            <ListBoxItem x:Name="Import" Selected="Import_Selected">
                <TextBlock Text="Import settings from..." FontStyle="Italic"/>
            </ListBoxItem>
        </ListBox>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Width="100" Height="35" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/Cancel_grey_16x.png" Width="16" Margin="2 0"/>
                    <TextBlock Text="Cancel" Margin="2 0"/>
                </StackPanel>
            </Button>
            <Button x:Name="SaveButton" Width="100" Height="35" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/Checkmark_blue_16x.png" Width="16" Margin="2 0"/>
                    <TextBlock Text="Save" Margin="2 0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
