<UserControl x:Class="CarmenUI.UserControls.CriteriaMarkSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:modelCriterias="clr-namespace:ShowModel.Criterias;assembly=ShowModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="ControlRoot">
    <ContentControl Content="{Binding ElementName=ControlRoot, Path=Criteria}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type modelCriterias:BooleanCriteria}">
                <CheckBox IsChecked="{Binding ElementName=ControlRoot, Path=Mark}"/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type modelCriterias:NumericCriteria}">
                <TextBox Text="{Binding ElementName=ControlRoot, Path=Mark, TargetNullValue=''}"/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type modelCriterias:SelectCriteria}">
                <ComboBox SelectedIndex="{Binding ElementName=ControlRoot, Path=Mark, TargetNullValue=''}" ItemsSource="{Binding Options}"/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</UserControl>
