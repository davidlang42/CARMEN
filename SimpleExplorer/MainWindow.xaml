<Window x:Class="App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App"
        mc:Ignorable="d"
        Title="CARMEN: Simple Explorer" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="showsViewSource"/>
        <CollectionViewSource x:Key="sectionsViewSource" 
                              Source="{Binding Sections, Source={StaticResource showsViewSource}}"/>
        <CollectionViewSource x:Key="itemsViewSource" 
                              Source="{Binding Items, Source={StaticResource sectionsViewSource}}"/>
        <CollectionViewSource x:Key="rolesViewSource" 
                              Source="{Binding Roles, Source={StaticResource itemsViewSource}}"/>
        <CollectionViewSource x:Key="countsViewSource"
                              Source="{Binding CountByGroups, Source={StaticResource rolesViewSource}}"/>
        <CollectionViewSource x:Key="applicantsViewSource"
                              Source="{Binding Applicants, Source={StaticResource showsViewSource}}"/>
        <CollectionViewSource x:Key="groupsViewSource"
                              Source="{Binding CastGroups, Source={StaticResource showsViewSource}}"/>
    </Window.Resources>
    <Grid>
        <TabControl Margin="0,0,0,35" ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <TabItem Header="Show Structure">
                <ScrollViewer  VerticalScrollBarVisibility="Auto">
                    <StackPanel Background="#FFE5E5E5">
                        <DataGrid x:Name="showsDataGrid" AutoGenerateColumns="False" 
                        EnableRowVirtualization="True" 
                        ItemsSource="{Binding Source={StaticResource showsViewSource}}" 
                        RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10,10,10,10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding ShowId}"
                                    Header="Show Id" Width="SizeToHeader"
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Binding="{Binding Name}" Header="Show Name" 
                                    Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid x:Name="sectionsDataGrid" AutoGenerateColumns="False" 
                        EnableRowVirtualization="True" 
                        ItemsSource="{Binding Source={StaticResource sectionsViewSource}}" 
                        RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10,10,10,10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding SectionId}"
                                    Header="Section Id" Width="SizeToHeader"
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Binding="{Binding Name}" Header="Section Name" 
                                    Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid x:Name="itemsDataGrid" AutoGenerateColumns="False" 
                        EnableRowVirtualization="True" 
                        ItemsSource="{Binding Source={StaticResource itemsViewSource}}" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10,10,10,10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding ItemId}" Header="Item Id" 
                                    Width="SizeToHeader" IsReadOnly="True"/>
                                <DataGridTextColumn Binding="{Binding Name}" Header="Item Name" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid x:Name="rolesDataGrid" AutoGenerateColumns="False" 
                        EnableRowVirtualization="True" 
                        ItemsSource="{Binding Source={StaticResource rolesViewSource}}" 
                        RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10,10,10,10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding RoleId}" Header="Role Id" 
                                    Width="SizeToHeader" IsReadOnly="True"/>
                                <DataGridTextColumn Binding="{Binding Name}" Header="Role Name" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid x:Name="countsDataGrid" AutoGenerateColumns="False" 
                        EnableRowVirtualization="True" 
                        ItemsSource="{Binding Source={StaticResource countsViewSource}}" 
                        RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10,10,10,10" CanUserAddRows="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding CastGroup.Name}" Header="Cast Group Name" IsReadOnly="True"/>
                                <DataGridComboBoxColumn TextBinding="{Binding Name}" SelectedItemBinding="{Binding CastGroup}" ItemsSource="{Binding Source={StaticResource groupsViewSource}}" Header="Cast Group"/>
                                <DataGridTextColumn Binding="{Binding Count}" Header="Count"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Applicants">
                <ScrollViewer  VerticalScrollBarVisibility="Auto">
                    <StackPanel Background="#FFE5E5E5">
                        <DataGrid x:Name="applicantsDataGrid" AutoGenerateColumns="True" 
                        EnableRowVirtualization="True" 
                        ItemsSource="{Binding Source={StaticResource applicantsViewSource}}" 
                        RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10,10,10,10">
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Groups">
                <ScrollViewer  VerticalScrollBarVisibility="Auto">
                    <StackPanel Background="#FFE5E5E5">
                        <DataGrid x:Name="groupsDataGrid" AutoGenerateColumns="True" 
                        EnableRowVirtualization="True" 
                        ItemsSource="{Binding Source={StaticResource groupsViewSource}}" 
                        RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10,10,10,10">
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <Button Content="Save Changes" HorizontalAlignment="Right" Margin="0,0,10,10" 
                Click="SaveButton_Click" Height="20" Width="123" VerticalAlignment="Bottom"/>
        <Button Content="Undo Changes" HorizontalAlignment="Right" Margin="0,0,138,10" 
                Click="UndoButton_Click" Height="20" Width="123" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
